.modal-fullscreen .modal-dialog 
  margin: 0;
  margin-right: auto;
  margin-left: auto;
  width: 100%;


@media (min-width: 768px) 
  .modal-fullscreen .modal-dialog 
    width: 750px;

@media (min-width: 992px) 
  .modal-fullscreen .modal-dialog 
    width: 970px;